{
  "manifest_version": 2,
  "name": "Emoji Picker",
  "version": "1.0",
  "default_locale": "en",
  "description": "Search for emoji.",
  "permissions": ["activeTab"],
  "icons": {
    "48": "icons/icon48.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["toggleIcon.js"]
    }
  ]
}
